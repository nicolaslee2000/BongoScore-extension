{
  "manifest_version": 3,
  "name": "BongoScore",
  "description": "A sneaky downloader to overthrow greed and achieve artistic freedom",
  "version": "0.2",
  "permissions": ["webRequest", "storage"],
  "host_permissions": [
    "https://musescore.com/*",
    "https://s3.ultimate-guitar.com/musescore.scoredata/g/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/BongoCat.png", "assets/BongoCat.gif"],
      "matches": ["https://musescore.com/*"]
    }
  ],
  "icons": {
    "16": "assets/BongoCat.png",
    "32": "assets/BongoCat.png",
    "48": "assets/BongoCat.png",
    "128": "assets/BongoCat.png"
  },
  "background": {
    "service_worker": "background/background.ts",
    "type" :"module"
  },
  "content_scripts": [
    {
      "js": ["content/content.js"],
      "run_at": "document_end",
      "matches": ["https://musescore.com/*"]
    }
  ]
}
